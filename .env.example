APP_NAME="IDN Menulis"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID
APP_TIMEZONE=Asia/Jakarta

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration - MySQL
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=idn_menulis
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync

CACHE_STORE=file
CACHE_PREFIX=
CACHE_DRIVER=file

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email Configuration
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@menulis.id"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Application Specific Settings
VITE_APP_NAME="${APP_NAME}"

# File Upload Settings
FILE_UPLOAD_MAX_SIZE=2048
ARTICLE_IMAGE_MAX_SIZE=2048
AVATAR_MAX_SIZE=2048

# TinyMCE Configuration
TINYMCE_API_KEY=your_tinymce_api_key_here
TINYMCE_EDITOR_LOCATION=/assets/tinymce/tinymce.min.js

# Application Pagination
ITEMS_PER_PAGE=20

# Reading Time Calculation
READING_TIME_WORDS_PER_MINUTE=200

# Cache Configuration
CACHE_TRENDING_ARTICLES_MINUTES=30

# Default Credentials for Demo
DEFAULT_ADMIN_EMAIL=admin@menulis.id
DEFAULT_ADMIN_PASSWORD=password
DEFAULT_ADMIN_USERNAME=admin

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# Admin email for security alerts
SECURITY_ADMIN_EMAIL=admin@idnmenulis.com

# Enable/disable security features
SECURITY_2FA_ENABLED=true
SECURITY_EMAIL_VERIFICATION=true
SECURITY_IP_BLOCKING=true
SECURITY_ACTIVITY_LOGGING=true
SECURITY_SUSPICIOUS_DETECTION=true

# Admin IP whitelist (comma-separated, leave empty to allow all)
# Example: 192.168.1.1,10.0.0.0/24
ADMIN_IP_WHITELIST=

# Session security
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ==============================================================================
